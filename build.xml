<?xml version="1.0" encoding="UTF-8"?>

<project name="themaze" default="default" basedir=".">

<target name="init">
    <mkdir dir="build/classes"/>
</target>

<target name="compile" depends="init">
	<javac srcdir="src" classpath="lib/junit-4.10.jar" destdir="build/classes" includeantruntime="false"/>
</target>

<target name="run" depends="compile">
    <java classname="themaze.TheMaze">
       	<classpath>
           	<pathelement location="build/classes/"/>
       	</classpath>
    </java>
</target>

<target name="test" depends="compile">
        <exec executable="java" dir="build/classes/" >
            <arg value="-classpath" />
            <arg value=".:../../lib/junit-4.10.jar" />
            <arg value="org.junit.runner.JUnitCore" />
            <arg value="themaze.TestClass" />
        </exec>
</target>

<target name="clean">
	<delete includeemptydirs="true">
    	<fileset dir="build" includes="**/*"/>
  	</delete>
	<delete includeemptydirs="true">
    	<fileset dir="dest-client" includes="**/*"/>
  	</delete>
	<delete includeemptydirs="true">
    	<fileset dir="dest-server" includes="**/*"/>
  	</delete>
</target>

<target name="jar" depends="compile">
	<jar destfile="dest-server/ija2014-server.jar" basedir="build/classes" excludes="**/TestClass.class"/>
</target>

</project>
